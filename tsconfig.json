{
  "extends": "@tsconfig/react-native/tsconfig.json",
  
  "compilerOptions": {
    "types": [
      "@types/styled-components-react-native"
    ],
    "baseUrl": "./",

    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@services/*": [
        "./src/services/*"
      ]
    }
  }
}